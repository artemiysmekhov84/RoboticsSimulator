<?xml version="1.0" encoding="UTF-8"?>
<sdf version="1.9">
    <model name="pendulum">
        <pose>0 0 0 0 0 0</pose>

        <!-- Base -->
        <link name="base">
            <pose>0 0 0 0 0 0</pose>
            <visual name="base_0_visual">
                <geometry>
                    <cylinder>
                        <radius>0.5</radius>
                        <length>0.05</length>
                    </cylinder>
                </geometry>
            </visual>
            <visual name="base_1_visual">
                <pose relative_to="base">0 0 0.525 0 0 0</pose>
                <geometry>
                    <box>
                        <size>0.1 0.1 1</size>
                    </box>
                </geometry>
            </visual>
            <visual name="joint_0_visual">
                <pose relative_to="base">0 0.1 0.975 1.5707 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.1</length>
                    </cylinder>
                </geometry>
            </visual>
        </link>

        <!-- Link 0 -->
        <link name="link_0">
            <pose relative_to="joint_0">0 -0.2 0 -1.5707 0 0</pose>
            <inertial>
                <mass>3.0</mass>
                <inertia>
                    <ixx>0.0</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.0</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.0</izz>
                </inertia>
            </inertial>
            <visual name="link_0_visual_0">
                <geometry>
                    <cylinder>
                        <radius>0.04</radius>
                        <length>0.4</length>
                    </cylinder>
                </geometry>
            </visual>
            <visual name="link_0_visual_1">
                <pose relative_to="link_0">0 0 -0.2 1.5707 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.1</length>
                    </cylinder>
                </geometry>
            </visual>
            <visual name="joint_1_visual">
                <pose relative_to="link_0">0 0.1 -0.2 1.5707 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.04</radius>
                        <length>0.1</length>
                    </cylinder>
                </geometry>
            </visual>
        </link>

        <!-- Link 1 -->
        <link name="link_1">
            <pose relative_to="joint_1">0 -0.2 0 -1.5707 0 0</pose>
            <inertial>
                <mass>1.0</mass>
                <inertia>
                    <ixx>0.0</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.0</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.0</izz>
                </inertia>
            </inertial>
            <visual name="link_1_visual_0">
                <geometry>
                    <cylinder>
                        <radius>0.035</radius>
                        <length>0.4</length>
                    </cylinder>
                </geometry>
            </visual>
        </link>

        <!-- Joints-->
        <joint name="joint_0" type="revolute">
            <pose relative_to="joint_0_frame">0 0 0 0 0 0</pose>
            <parent>base</parent>
            <child>link_0</child>
            <axis>
                <xyz expressed_in="__model__">0 1 0</xyz>
                <dynamics>
                    <damping>0.1</damping>
                </dynamics>
            </axis>
        </joint>
        <joint name="joint_1" type="revolute">
            <pose relative_to="joint_1_frame">0 0 0 0 0 0</pose>
            <parent>link_0</parent>
            <child>link_1</child>
            <axis>
                <xyz expressed_in="__model__">0 1 0</xyz>
                <dynamics>
                    <damping>0.0</damping>
                </dynamics>
            </axis>
        </joint>
        <joint name="world_joint" type="fixed">
            <pose relative_to="base">0 0 0 0 0 0</pose>
            <parent>world</parent>
            <child>base</child>
        </joint>

        <!-- Frames -->
        <frame name="joint_0_frame" attached_to="base">
            <pose relative_to="base">0 0.1 0.975 1.5707 0 0</pose>
        </frame>
        <frame name="joint_1_frame" attached_to="link_0">
            <pose relative_to="link_0">0 0.1 -0.2 1.5707 0 0</pose>
        </frame>
    </model>
</sdf>
